<% if resource.errors.any? %>
  <% if resource.errors.any? %>
    <div id="error_explanation" class="text-red-700 my-2">
      <h2 class="mb-2">
        <%= pluralize(resource.errors.count, "error") %> prohibited
        this <%= resource.class.model_name.human.downcase %> from being saved:
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li class="flex pb-1">
            <i class="material-icons font-bold">priority_high</i>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
    <br>
  <% end %>
<% end %>
