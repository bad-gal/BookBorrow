<h2>Books available to loan</h2>

<table>
  <thead>
  <th>Image</th>
  <th>Title</th>
  <th>Category</th>
  <th>Book Owner</th>
  <th>Available to loan?</th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <% if book.book_cover.attached? %>
          <%= link_to book_path(book.id) do %>
            <%= image_tag book.book_cover.variant(:thumb) %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to "#{book.title}", book_path(book.id) %></td>
      <td><%=book.category.topic %></td>
      <td><%= book.user.first_name%> <%= book.user.last_name%></td>
    </tr>
  <% end %>
  </tbody>
</table>
